    <script src="./qgis/whole/layers/PH050500000_FH_25yr_1.js"></script>
    <script src="./qgis/whole/styles/PH050500000_FH_25yr_1_style.js"></script>
    <script src="./qgis/whole/layers/layers.js" type="text/javascript"></script>
    <script src="./qgis/whole/resources/Autolinker.min.js"></script>
    <script src="./qgis/whole/resources/qgis2web.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // üè† Custom Home Button (links to "/")
        class HomeButtonControl extends ol.control.Control {
          constructor() {
            const div = document.createElement("div");
            div.innerHTML = `
          <a href="/" title="Go Home" 
            style="
              background:#1b5e20;
              color:#fff;
              cursor:pointer;
              width:100%;
              height:100%;
              display:flex;
              align-items:center;
              justify-content:center;
              font-size:16px;
              line-height:1;
              text-decoration:none;
              border-radius:4px;
            " 
            class="p-2 btn btn-primary">
            Go Home
          </a>
        `;

            const element = document.createElement("div");
            element.className = "ol-control ol-unselectable ol-custom-home";
            element.appendChild(div);

            super({ element: element });
          }
        }

        // Add the control to the map
        map.addControl(new HomeButtonControl());
      });
    </script>

    <style>
      /* ‚úÖ Style and position the Home button (bottom-left corner) */
      .ol-custom-home {
        position: absolute !important;
        bottom: 1em;
        left: 0.8em;
        z-index: 1000;
      }

      /* Ensure consistent hover/active look */
      .ol-custom-home .btn {
        background-color: #1b5e20 !important;
        border: none !important;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
      }

      .ol-custom-home .btn:hover {
        background-color: #2e7d32 !important;
        text-decoration: none;
      }
    </style>
  </body>
