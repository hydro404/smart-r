<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Route Maps</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    html, body {
      height: 100%;
      margin: 0;
    }
    #mapFrame {
      width: 100%;
      height: calc(100% - 60px); /* leave space for dropdown */
      border: none;
    }
    .dropdown-container {
      padding: 10px;
      background: #f8f9fa;
      border-bottom: 1px solid #ccc;
    }
  </style>
  <%- include('partials/header') %>
</head>
<body>
  <div class="d-flex justify-content-center">
    <div class="text-center pt-2">
      <h3>SMART-R TSP Result Maps</h3>
    </div>
  </div>

  <div class="d-flex justify-content-center align-items-center">
    <h5>Select a cluster:</h5>
    <div class="dropdown-container">
      <select id="mapSelect" class="form-select w-auto d-inline-block">
        <option value="maps/tsp_map_north.html">North</option>
        <option value="maps/tsp_map_east.html">East</option>
        <option value="maps/tsp_map_west.html">West</option>
        <option value="maps/tsp_map_poblacion.html">Poblacion</option>
      </select>
    </div>
  </div>

  <iframe id="mapFrame" src="maps/tsp_map_north.html"></iframe>

  <script>
    document.getElementById("mapSelect").addEventListener("change", function() {
      document.getElementById("mapFrame").src = this.value;
    });
  </script>

</body>
</html>
